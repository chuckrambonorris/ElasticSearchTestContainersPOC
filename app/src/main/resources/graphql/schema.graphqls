type Product {
  id: ID!
  name: String!
  category: String!
  price: Float!
}

type Query {
  getProductById(id: ID!): Product
  getProducts: [Product]
}

type Mutation {
  createProduct(product: ProductInput): Product
  updateProduct(id: ID!, product: ProductInput): Product
  deleteProduct(id: ID!): Boolean
}

input ProductInput {
  name: String!
  category: String!
  price: Float!
}
